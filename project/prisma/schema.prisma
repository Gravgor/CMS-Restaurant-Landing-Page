// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @default(autoincrement()) @id
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Content {
  id        Int      @default(autoincrement()) @id
  title     String
  email     String
  address   String
  address2  String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}